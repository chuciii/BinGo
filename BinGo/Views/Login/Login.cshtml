
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/style.css" rel="stylesheet" />
<script src="~/Scripts/validator.min.js"></script>
<style>
    body {
        background-image: url('../../Images/Login/photograph.jpeg');
    }
</style>
<div class="lg-content-agileits">
    <form action="#" method="post" data-toggle="validator" role="form">
        <div class="form-group">
            <label class="control-label">User Account</label>
            <input type="text" class="form-control" id="Email" placeholder="Signup Email" data-error="Enter Your Signup Email" required>
            <div class="help-block with-errors"></div>
        </div>
        <div class="form-group">
            <label class="control-label">User Password</label>
            <input type="text" class="form-control" id="Password" placeholder="Your Password" data-error="Enter Your Setting Password" required>
            <div class="help-block with-errors"></div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-lg btn-success">Sign In</button>
        </div>
    </form>
</div>
